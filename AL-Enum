enum 50120 TypeEnum
{
    Extensible = true;

    value(0; Nothing) { }
    value(1; Customer) { }
    value(2; Item) { }
}


table 50120 TableWithRelation
{

    fields
    {

        field(1; Id; Integer) { }
        field(2; Type; enum TypeEnum) { }
        field(3; Relation; Code[20])
        {

            TableRelation =
            if (Type = const (Customer)) Customer
            else if (Type = const (Item)) Item;
        }

    }
}
